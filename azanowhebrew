  <script>
    (function() {
      const channelHandle = 'AzaNowHebrew';
      const deepLink = 'tg://resolve?domain=' + channelHandle;
      const webLinkBase = 'https://t.me/' + channelHandle;

      // שומרים פרמטרי UTM אם הגיעו מהקמפיין
      const params = new URLSearchParams(window.location.search);
      const webLink = params.toString() ? `${webLinkBase}?${params.toString()}` : webLinkBase;

      const joinBtn = document.getElementById('join-btn');
      const copyBtn = document.getElementById('copy-btn');
      const fallbackA = document.getElementById('fallback-link');
      fallbackA.href = webLink;

      function openTelegramSmart(e) {
        e && e.preventDefault();
        const isMobile = /Android|iPhone|iPad|iPod|Opera Mini|IEMobile/i.test(navigator.userAgent);
        const start = Date.now();

        // ניסיון לפתוח את האפליקציה
        const ifr = document.createElement('iframe');
        ifr.style.display = 'none';
        ifr.src = deepLink;
        document.body.appendChild(ifr);

        // נפילה חכמה ל־Web/אפליקציה
        setTimeout(() => {
          const elapsed = Date.now() - start;
          // אם לא נפתח (דפדפן חסם/אין אפליקציה) – נעבור ל־t.me
          if (elapsed < 1500) {
            window.location.href = webLink;
          }
          setTimeout(() => document.body.removeChild(ifr), 1000);
        }, 600);
      }

      joinBtn.addEventListener('click', openTelegramSmart);

      copyBtn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(webLink);
          copyBtn.textContent = 'הקישור הועתק ✔';
          setTimeout(() => (copyBtn.textContent = 'העתקת קישור'), 1600);
        } catch (err) {
          alert('לא הצלחתי להעתיק. הקישור הגיבוי זמין מתחת לכפתור.');
        }
      });

      // מאפשר גם פתיחה אוטומטית אם מגיעים מקמפיין עם ?auto=1
      if (params.get('auto') === '1') {
        setTimeout(() => openTelegramSmart(), 250);
      }
    })();
  </script>
